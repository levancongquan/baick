<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/a22">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="150dp"
        android:text="WELCOME"
        android:textSize="50dp"
        android:textStyle="italic" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="230dp"
        android:text="Sign in to continue"
        android:textSize="30dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/circleImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="260dp"

        android:src="@drawable/q7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="290dp"
        android:text="UserName:"
        android:textColor="#030F19"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="380dp"
        android:text="Password:"
        android:textColor="#030F19"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/usename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/input_bg"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="320dp"
        android:ems="10"
        android:hint="Tai Khoan"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#C61212"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="410dp"
        android:ems="10"
        android:background="@drawable/input_bg"
        android:hint="Mat Khau"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#C61212"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:ignore="NotSibling" />

    <Button
        android:id="@+id/buttonDangNhap"
        android:layout_width="164dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="350dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#DC2A2A"
        android:text="Sign In"
         />

    <Button
        android:id="@+id/buttonDangKy"
        android:layout_width="149dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="350dp"
        android:layout_toRightOf="@+id/buttonDangNhap"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#FFDC2A2A"
        android:text="Sign Up" />


</RelativeLayout>